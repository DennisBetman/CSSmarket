<section class="dashboard">
  <%= render "admin/menu" %>

  <div class="dashboard__content">
    <h1>Admin Dashboard</h1>

    <h3>Posts</h3>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>User</th>
          <th>Title</th>
          <th>Created at</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.user_name %> <i>(<%= post.user_id %>)</i></td>
            <td><%= post.title %></td>
            <td><%= post.created_at.strftime("%d %b. %Y, %H:%M") %></td>
            <td>
              <%= link_to "View Post", post %> <br>
              <%= link_to "Approve Post", post %> <br>
              <%= link_to "Decline Post", post %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
