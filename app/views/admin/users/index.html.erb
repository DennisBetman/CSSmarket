<section class="dashboard dashboard--full-width">
  <%= render "admin/menu" %>

  <div class="dashboard__content">
    <h3 class="content__title">Admin dashboard</h3>
    <h1 class="content__subtitle">Users</h1>

    <table class="admin-table">
      <tr>
        <th>ID</th>
        <th>Level</th>
        <th>Cut</th>
        <th>Name</th>
        <th>Email</th>
        <th>Created at</th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.id, admin_user_path(user.id) %></td>
          <td>
            <%= form_for user, url: user_path(user.id), html: { class: "table-form" } do |f| %>
              <%= f.text_field :level, placeholder: "Level", class: "table-form__input" %>
              <%= f.submit ">", class: "table-form__button" %>
            <% end %>
          </td>
          <td>
            <%= form_for user, url: user_path(user.id), html: { class: "table-form" } do |f| %>
              <%= f.text_field :cut_percentage, placeholder: "Cut", class: "table-form__input" %>
              <%= f.submit ">", class: "table-form__button" %>
            <% end %>
          </td>
          <td><%= link_to user.name, profile_path(user.name) %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime("%d %b. %Y, %H:%M") %></td>
        </tr>
      <% end %>
    </div>
  </table>
</section>
