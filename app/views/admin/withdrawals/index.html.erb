<section class="dashboard">
  <%= render "admin/menu" %>

  <div class="dashboard__content">
    <h3 class="content__title">Admin dashboard</h3>
    <h1 class="content__subtitle">Withdrawal</h1>

    <div class="table content__subject">
      <div class="table__list table__list--col5 table__list--drawl">
        <div class="table__item">ID</div>
        <div class="table__item">User</div>
        <div class="table__item">Amount</div>
        <div class="table__item">Created at</div>
        <div class="table__item">Actions</div>
      </div>
      <% @withdrawals.each do |withdrawal| %>
        <div class="table__list table__list--drawl">
          <div class="table__item"><%= withdrawal.id %></div>
          <div class="table__item"><%= withdrawal.user_id %></div>
          <div class="table__item">&euro; <%= withdrawal.amount %></div>
          <div class="table__item"><%= withdrawal.created_at.strftime("%d %b. %Y, %H:%M") %></div>
          <div class="table__item">
            <% if withdrawal.status == 0 %>
              <%= form_for withdrawal, url: withdrawal_path(withdrawal.id) do |f| %>
                <%= f.hidden_field :status, value: 1 %>
                <%= f.submit "Complete", class: "button button--gradient actions__button", data: { confirm: "Are you sure you want to confirm #{withdrawal.id} for â‚¬#{withdrawal.amount}" } %>
              <% end %>
            <% else %>
              Complete
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
