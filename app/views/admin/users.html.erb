<section class="dashboard">
  <%= render "admin/menu" %>

  <div class="dashboard__content">
    <h1>Admin Dashboard</h1>

    <h3>Orders</h3>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Level</th>
          <th>Created at</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.level %></td>
            <td><%= user.created_at.strftime("%d %b. %Y, %H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
