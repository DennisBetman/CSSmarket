<section class="dashboard dashboard--full-width">
  <%= render "admin/menu" %>

  <div class="dashboard__content">
    <h3 class="content__title">Admin dashboard</h3>
    <h1 class="content__subtitle">Orders</h1>

    <table class="admin-table">
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Amount</th>
        <th>Customer</th>
        <th>Type</th>
        <th>Created at</th>
      </tr>

      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.user_id %></td>
          <td>&euro; <%= order.amount %></td>
          <td style="word-break: break-word; max-width: 300px"><%= order.customer_id %></td>
          <td><%= order.payment_type %></td>
          <td><%= order.created_at.strftime("%d %b. %Y, %H:%M") %></td>
        </tr>
      <% end %>
    </table>
  </div>
</section>
