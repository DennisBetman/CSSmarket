<%= form_for @post, html: { class: "form form--columns" } do |f| %>

  <% if not @post.nil? and @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited
        this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form__parent">
    <%= f.text_field :title, class: "form__input" %>
    <%= f.label :title, class: "form__label" %>
  </div>

  <div class="form__parent">
    <%= f.label :categories, class: "form__label form__label--stacked" %>
    <%= f.select :categories, options_for_select(
                              [["Category...", ""],
                              ["Buttons", "buttons"],
                              ["Menus", "menus"],
                              ["Forms", "forms"]],
        f.object.categories), {}, { :class => "form__input form__input--select" } %>

  </div>

  <div class="form__parent">
    <%= f.label :content, class: "form__label form__label--stacked" %>
    <%= f.text_area :content, class: "form__input form__input--textarea", data: { role: "markdown" } %>
  </div>

  <div class="form__parent">
    <%= f.text_field :price, class: "form__input" %>
    <%= f.label :price, class: "form__label" %>
  </div>

  <div class="form__parent">
    <%= f.label :image, class: "form__label form__label--stacked" %>
    <% if @post.image.present? %>
      <img src="<%= @post.image %>" class="project__image" />
    <% end %>
    <%= f.file_field :image, accept: "image/jpeg, image/jpg, image/png", class: "form__input" %>
  </div>

  <div class="form__parent">
    <%= f.label :file, class: "form__label form__label--stacked" %>
    <%= f.file_field :file, accept: "application/zip", class: "form__input" %>
  </div>

  <div class="form__parent">
    <%= f.text_field :license, class: "form__input" %>
    <%= f.label :license, class: "form__label" %>
  </div>

  <div class="form__parent">
    <%= f.submit %>
  </div>
<% end %>
