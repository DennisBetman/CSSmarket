<div class="project">
  <%= link_to post_path(post), class: "project__image", style: "background-image: url(#{post.image})" do %>
    <div class="project__overlay">
      <i class="project__icon material-icons">search</i>
    </div>
  <% end %>
  <div class="project__content">
    <span class="project__name"><%= post.title %></span>
    <% if post.user_name %>
      <span class="project__author"><%= post.user_name %></span>
    <% end %>

    <%= link_to "#{post.file}", class: "project__price" do %>
      <i class="material-icons">file_download</i>
    <% end %>
  </div>
</div>
