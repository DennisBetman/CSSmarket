<section class="dashboard">
  <%= render "dashboard/menu" %>

  <div class="dashboard__content">
    <h3 class="content__title">Account Settings</h3>

    <%= form_for current_user, html: { class: "form content__subject" } do |f| %>

      <h4 style="flex: 0 0 100%;">Email</h4>

      <div class="form__parent">
        <%= f.text_field :email, class: "form__input", placeholder: " " %>
        <%= f.label :email, class: "form__label" %>
      </div>

      <h4 style="flex: 0 0 100%;">New Password</h4>

      <div class="form__parent">
        <%= f.password_field :password, class: "form__input", placeholder: " " %>
        <%= f.label :password, class: "form__label" %>
      </div>

      <div class="form__parent">
        <%= f.password_field :password_confirmation, class: "form__input", placeholder: " " %>
        <%= f.label :password_confirmation, "Re-type password", class: "form__label" %>
      </div>

      <% if current_user.level != 0 %>
        <h4 style="flex: 0 0 100%;">Payments</h4>

        <div class="form__parent">
          <%= f.text_field :paypal_address, class: "form__input", placeholder: " " %>
          <%= f.label :paypal_address, class: "form__label" %>
        </div>

        <div class="form__parent">

        </div>

        <h4 style="flex: 0 0 100%;">Crypto</h4>

        <div class="form__parent">
          <%= f.text_field :nano_address, class: "form__input", placeholder: " " %>
          <%= f.label :nano_address, class: "form__label" %>
        </div>

        <div class="form__parent">

        </div>
      <% end %>

      <%= f.submit "Save", class: "button button--gradient" %>
    <% end %>
  </div>
</section>
