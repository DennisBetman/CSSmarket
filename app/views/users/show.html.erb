<section class="intro intro--blue">
  <h1 class="intro__title"><%= @user.name %></h1>
  <h2 class="intro__subtitle">Signed up at: <%= @user.created_at.strftime("%m/%d/%Y %I:%M%p") %></h2>
</section>

<div class="projects">
	<% @posts.each do |post| %>
	<h3 class="projects__title">12 Projects</h3>
	<div class="projects__parent">
		<%= render "posts/post", post: post %>
	</div>
    <% end %>
    <% if (@posts.blank?) %>
      <h2 class="projects__title projects__title--centerd">This user hasn't post anything yet</h2>
	  <a href="#" class="button button--ghost">Browse projects</a>
    <% end %>
</div>
